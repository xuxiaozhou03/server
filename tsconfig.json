{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "rootDir": "./cli",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["cli/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
